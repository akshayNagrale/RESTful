<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:layout_toRightOf="@id/imageView"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/name"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/rlname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Real Name:"
                android:layout_toRightOf="@id/imageView"
                android:textStyle="bold"
                android:layout_below="@+id/txtName"/>
            <TextView
                android:id="@+id/txtRlName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rlname"
                android:textStyle="bold"
                android:layout_below="@+id/txtName"/>
            <TextView
                android:id="@+id/team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team :"
                android:layout_toRightOf="@id/imageView"
                android:textStyle="bold"
                android:layout_below="@+id/rlname"/>
            <TextView
                android:id="@+id/txtTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/team"
                android:layout_below="@id/rlname"/>
            <TextView
                android:id="@+id/appearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Appearance:"
                android:layout_toRightOf="@id/imageView"
                android:textStyle="bold"
                android:layout_below="@+id/team"/>
            <TextView
                android:id="@+id/txtAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/appearance"
                android:layout_below="@id/txtTeam"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>